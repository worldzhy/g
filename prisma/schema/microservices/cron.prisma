model CronTask {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  cronTime  String
  running   Boolean  @default(false)
  command   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@schema("microservice/cron")
}
